<h1><%= @workout.full_name %></h1>
<h5 class="col-sm-8 mx-auto">Workout Day: <br> <%= @workout.day %></h5>
<h5 class="col-sm-8 mx-auto">Sets: <br><%= @workout.sets %></h5>
<h5 class="col-sm-8 mx-auto">Reps: <br><%= @workout.reps %></h5>
<h5 class="col-sm-8 mx-auto">Time between Sets: <br><%= @workout.rest_time %> </h5>

<% if admin_signed_in? %>
  <div class="actions">
    <%= link_to 'Edit Workout', edit_plan_workout_url(:id => @workout.id) , class: "btn btn-default btn-lg" %>
    <%= link_to 'Delete Workout', plan_workout_url, method: :delete, class: "btn btn-default btn-lg" %>
  </div>
<% end %>
