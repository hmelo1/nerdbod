<!DOCTYPE html>
<html>
  <head>
    <title>Nerdbod</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
          <div class="container">
            <%= link_to 'NerdBod', root_url, :class => '"navbar-brand js-scroll-trigger' %>
            <button class="navbar-toggler navbar-toggler-right collapsed" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
              Menu
              <i class="fa fa-bars"></i>
            </button>
            <div class="navbar-collapse collapse" id="navbarResponsive" style="">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <%= link_to "All Plans", plans_url, :class => 'nav-link js-scroll-trigger' %>
                </li>
                <% if user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to current_user.email, edit_user_registration_path, :class => 'nav-link js-scroll-trigger' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'nav-link js-scroll-trigger'  %>
                  </li>
                <% else %>
                  <li class="nav-item">
                    <%= link_to "Signup", new_user_registration_path, :class => 'nav-link js-scroll-trigger'  %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "Login", new_user_session_path, :class => 'nav-link js-scroll-trigger'  %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
  </head>

  <section id="about" class="content-section text-center">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <%= yield %>
        </div>
      </div>
    </div>
  </section>

    <footer>
      <div class="container text-center">
        <p>Copyright Â© NerdBod 2018</p>
      </div>
    </footer>
  </body>
</html>
